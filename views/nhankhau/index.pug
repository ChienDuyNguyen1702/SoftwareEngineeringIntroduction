    .px-3
        table.table.text-white#nhanKhauTable
            tr.header.text-center
                th Mã hộ khẩu
                th Số CMND
                th Họ và tên
                th Ngày sinh
                th Giới tính
                th Địa chỉ
                th Số điện thoại
                th
            each nhanKhau in nhanKhaus
                tr.info
                    td= nhanKhau.maHoKhau
                    td= nhanKhau.soCCCD
                    td= nhanKhau.hoVaTen
                    td= nhanKhau.namSinh.toISOString().slice(0,10)
                    td= nhanKhau.gioiTinh
                    td= nhanKhau.diaChi
                    td= nhanKhau.soDienThoai
                    td.d-flex.justify-content-around
                        a.d-block.btn.btn-secondary.me-1(href="/nhan-khau/"+nhanKhau._id+"/cap-nhat") Sửa
                        a.d-block.btn.btn-secondary.me-1(href="/nhan-khau/"+nhanKhau._id+"/xoa") Xoá
    script(src="/js/searching-table.js") 
