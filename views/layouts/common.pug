        link(type='text/css' rel='stylesheet' href='/css/style.css')
        link(rel='stylesheet', type='text/css', href='//cdn.jsdelivr.net/gh/hung1001/font-awesome-pro@8af0edd/css/all.css')
        include ./favicon
        meta(property="og:description" content="Bài tập lớp KTPM bởi nhóm 20")
        meta(property="og:image" content="/assets/img/bg.jpg")
    block stylesheet

    body
        // toast
        .position-fixed.bottom-0.start-0.p-3(style='z-index: 5')
            #alertToast.toast(role='alert' aria-live='assertive' aria-atomic='true')
                .toast-header
                    strong.me-auto.fm-bold Hệ thống
                    small Vừa xong
                    button.btn-close(type='button' data-bs-dismiss='toast' aria-label='Close')
                .toast-body#toastContent= messages.alert
        // nav
        .navbar
            .container-fluid.mb-3.mb-md-2
                a.navbar-brand.text-white.fs-3.fs-md-1(href="/")
                    i.fad.fa-virus-slash
                    span     COVID-19 MANAGER APP
                a.ms-auto.btn.btn-tung(href="/auth/logout")
                    i.fas.fa-sign-out-alt
                    span.d-none.d-md-inline   ĐĂNG XUẤT
            .container-fluid
                .d-flex.justify-content-around.w-100.flex-wrap
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='dashboard'&&"btn-tung-hover") href="/dashboard")
                            i.d-inline.d-md-none.fas.fa-virus-slash
                            span.d-none.d-md-inline TRANG CHỦ
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='nhan-khau'&&"btn-tung-hover") href="/nhan-khau")
                            i.d-inline.d-md-none.fas.fa-users
                            span.d-none.d-md-inline NHÂN KHẨU
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='ho-khau'&&"btn-tung-hover") href="/ho-khau")
                            i.d-inline.d-md-none.fas.fa-house
                            span.d-none.d-md-inline HỘ KHẨU
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='khai-bao'&&"btn-tung-hover") href="/khai-bao")
                            i.d-inline.d-md-none.fas.fa-file-check
                            span.d-none.d-md-inline KHAI BÁO
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='test-covid'&&"btn-tung-hover") href="/test-covid")
                            i.d-inline.d-md-none.fas.fa-vials
                            span.d-none.d-md-inline XÉT NGHIỆM
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='cach-ly'&&"btn-tung-hover") href="/cach-ly")
                            i.d-inline.d-md-none.fas.fa-shield-virus
                            span.d-none.d-md-inline CÁCH LY
                    .fun.mx-1.mb-1
                        a.btn.btn-tung(class=(mainPath=='thong-ke'&&"btn-tung-hover") href="/thong-ke")
                            i.d-inline.d-md-none.fas.fa-chart-pie-alt
                            span.d-none.d-md-inline THỐNG KÊ

