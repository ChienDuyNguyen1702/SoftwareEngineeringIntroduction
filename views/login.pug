	.login-area
		.login-wrap#login
			.login-html
				input#tab-1.sign-in(type='radio' name='tab' checked)
				label.tab(for='tab-1') ĐĂNG NHẬP
				input#tab-2.sign-up(type='radio' name='tab')
				label.tab(for='tab-2')
				form.login-form(action="/auth/login" method="POST")
					.sign-in-htm
						.group
							label.label(for='user') Tên tài khoản
							input#user.input.quicksand(type='text' name='username' required value=messages.username&&messages.username[0])
						.group
							label.label(for='pass') Mật khẩu
							input#pass.input.quicksand(type='password' data-type='password' name="password" required value=messages.password&&messages.password[0])
						if (messages.warning)
							.group
								.alert.alert-danger= messages.warning
						.group 
							input#check.check(type='checkbox' name="remember" checked)
							label(for='check')
								span.mr-2.icon
								| Giữ đăng nhập 7 ngày

						.group
							input.button.quicksand(type='submit' value='Đăng nhập')
