extends ../layouts/common.pug

block content 
    form
        input.sinput(type='text')
        button.sbutton.btn.btn-tung Tìm kiếm
    .d-flex.justify-content-around.w-75.my-2.mx-auto
        a.d-block.btn.btn-tung.shadow(href="/") Thêm
        a.d-block.btn.btn-tung.shadow(href="/") Xóa
        a.d-block.btn.btn-tung.shadow(href="/") Sửa
        a.d-block.btn.btn-tung.shadow(href="/") Hiển thị tất cả
